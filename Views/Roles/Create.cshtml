@model string

<form asp-action="Create" method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Create new role</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label class="text-white font-weight-bold" for="name">Name</label>
                    </div>
                    <div class="col-8">
                        <input type="text" name="name" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Create" class="btn btn-primary w-100" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
