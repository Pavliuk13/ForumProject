@using Microsoft.AspNetCore.Identity
@model ForumProject.ViewModels.ChangeRoleViewModel
 
<form asp-action="Edit" method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-3">Change role for user @Model.UserEmail</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <input asp-for="@Model.UserId" type="text" hidden>
                <div class="form-group row mb-3">
                    <div class="col-12">
                        @foreach (IdentityRole role in Model.AllRoles)
                        {
                            <div class="form-check form-switch">
                                <input type="checkbox" id="flexSwitchCheckDefault" class="form-check-input" name="roles" value="@role.Name"
                                       @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")/>
                                <label class="form-check-label text-white font-weight-bold" for="flexSwitchCheckDefault">@role.Name</label>
                                <br/>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-between row">
                        <div class="col">
                            <input type="submit" value="Save" class="btn btn-primary w-100"/>
                        </div>
                        <div class="col">
                            <a asp-action="UsersList" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>