@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Users list";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Users</h2>
        </div>
        <div class="col-6 text-right text-end">
            <a class="btn btn-primary" asp-action="Create">Create user</a>
        </div>
    </div>

    <br/><br/>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th class="text-white">
                        UserName
                    </th>
                    <th class="text-white">
                        Email
                    </th>
                    <th class="text-white">
                        Action
                    </th>
                </tr>
            </thread>
            <trbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td width="30%" class="text-white">@user.UserName</td>
                        <td width="30%" class="text-white">@user.Email</td>
                        <td class="text-center">
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </trbody>
        </table>
    }
    else
    {
        <p class="text-white">Users don't exist.</p>
    }
</div>
