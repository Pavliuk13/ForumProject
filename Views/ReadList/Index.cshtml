@model IEnumerable<ForumProject.Models.AppDBContext.Post>

@{
    ViewData["Title"] = "Read List";
}

@if (Model.Any())
{
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa-solid fa-bookmark"></i> &nbsp;
                            Saved posts
                        </div>
                        <div class="col-6 text-end">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Back to posts</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                <div class="col-12 col-lg-7">
                                    Post title
                                </div>
                                <div class="col-12 col-lg-2">
                                    Category
                                </div>
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />
                        @foreach (var obj in Model)
                        {
                            <div class="row h-100">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@WebConst.ImagePath@obj.Image" class="rounded" width="100%" />
                                </div>
                                <div class="col-8 col-lg-7 pt-lg-4">
                                    <h5>@obj.Theme</h5>
                                </div>
                                <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;"> @obj.Category.Name</span>

                                </div>
                                <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-outline-success">
                                        <i class="fa-solid fa-arrow-up-right-from-square"></i>
                                    </a>
                                    <a asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <p>Please add items to cart.</p>
}