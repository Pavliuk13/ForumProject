@model ForumProject.Models.AppDBContext.Post

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
    <div class="card bg-white rounded shadow-sm" style="border: 1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left" style="font-weight: bold">@Model.Theme</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.Category.Name</span></label></div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WebConst.ImagePath@Model.Image" alt="Card image cap"/>
        <div class="card-body p-1 px-3 row">
            <div class="col-12">
                <span class="badge p-2 border w-100" style="background-color: lavenderblush; font-weight: bold; color: #000">Short Description</span>
            </div>
            <div class="col-12 pt-2" style="font-size: 13px; text-align: justify; color: #000; font-weight: bold">
                <p>@Model.Description.Substring(0, (int)(@Model.Description.Length * 0.4))...</p>
            </div>
            <div class="col-12 pt-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm pt-2" style="height: 40px">Read Post</a>
            </div>
        </div>
    </div>
</div>